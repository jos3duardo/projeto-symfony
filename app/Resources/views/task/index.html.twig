{% extends 'base.html.twig' %}
{% block title %}Tasks{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}
{% block body %}
    <h1>{{ name }}'s tasks </h1>

    <ul>
    {% for task in tasks %}
        <li><a href="{{ path('task_show',{'id':task.id}) }}"> {{ task.name }} ({{ task.dueDate |date('d-m-Y') }})</a></li>
    {% endfor %}
    </ul>
{% endblock %}